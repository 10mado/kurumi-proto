{
  "name": "10mado/kurumi-proto",
  "type": "library",
  "description": "The basic framework using middlewares.",
  "keywords": [
    "middleware",
    "psr-7",
    "psr-15",
    "http"
  ],
  "homepage": "https://github.com/10mado/kurumi-proto",
  "license": "proprietary",
  "authors": [
    {
      "name": "Hiroyuki Yamaoka",
      "email": "yamaoka@10mado.jp",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "~7.2.0",
    "ext-mbstring": "*",
    "nikic/fast-route": "^1.3",
    "oscarotero/middleland": "^1.0",
    "psr/container": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "psr/log": "~1.0",
    "twig/twig": "^2.5",
    "zendframework/zend-diactoros": "^2.0",
    "zendframework/zend-httphandlerrunner": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Kurumi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kurumi\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-text"
  }
}
