{
  "name": "10mado/kurumi-proto",
  "type": "library",
  "description": "The basic framework using middlewares.",
  "homepage": "https://github.com/10mado/kurumi-proto",
  "require": {
    "php": "~7.2.0",
    "ext-mbstring": "*",
    "oscarotero/middleland": "^1.0",
    "zendframework/zend-diactoros": "^2.0",
    "nikic/fast-route": "^1.3",
    "psr/container": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "psr/log": "~1.0",
    "twig/twig": "^2.5",
    "zendframework/zend-httphandlerrunner": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Kurumi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kurumi\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.3",
    "phpunit/phpunit": "^7.4"
  },
  "scripts": {
    "test": "phpunit"
  }
}
